<h1><%= @cocktail.name %></h1>
<p><%= @doses.empty? ? "No ingredients yet" : "Ingredients:" %></p>
<ul>
  <% @doses.each do |dose| %>
    <li><%= dose.ingredient.name %>: <%= dose.description %></li>
  <% end %>
</ul>

<p><%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %></p>
<p><%= link_to "Back to index", cocktails_path %></p>
