<h1><%= @cocktail.name %></h1>
<%= cl_image_tag @cocktail.image, height: 300, width: 400, crop: :fill if @cocktail.image? %>
<p><%= @doses.empty? ? "No ingredients yet" : "Ingredients:" %></p>
<ul>
  <% @doses.each do |dose| %>
    <li><%= dose.ingredient.name %>: <%= dose.description %>
      <%= link_to "delete", cocktail_dose_path(@cocktail, dose), method: :delete, data: {confirm: "Are you sure that you want to delete ingredient?"} %>
    </li>
  <% end %>
</ul>

<p><%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %></p>
<p><%= link_to "Back to index", cocktails_path %></p>
