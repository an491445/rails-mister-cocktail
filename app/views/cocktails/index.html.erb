<div class="banner" style="background-image: linear-gradient(-225deg, rgba(255, 255, 255, 0.6) 0%, rgba(15, 94, 44, 0.6) 50%), url('<%= cl_image_path "pujyp9dnceq4epgppv79.jpg", height: 300, width: 400, crop: :fill %>');">
  <div class="banner-content">
    <h1>Rails Mister Cocktail</h1>
    <p>Very cool, useful and smart</p>
  </div>
</div>
<div class="container">
  <h2>Cocktails</h2>
  <%= "No cocktails yet" if @cocktails.empty? %>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path cocktail.image, height: 300, width: 400, crop: :fill %>')">
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
          <%= link_to "", cocktail_path(cocktail), class: "card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
